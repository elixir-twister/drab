<div id="begin"></div>
<div id="drab_pid"></div>

<input type="text" name="outsider" value="outside of the form"><br>

<form>
  <input type="text" name="text_input" value="<%= @text1 %>"><br>
  <select id="select_input" @value=<%= @select1 %>>
    <option value="1">One</option>
    <option value="2">Two</option>
    <option value="3">Three</option>
  </select><br>
  <textarea name="textarea"><%= @textarea1 %></textarea><br>
  <pre><%= @textarea1 %></pre><br>
  <input type="text" value="<%= @text1 %>"><br>
  <br>
  <input type="radio" name="radio" value="1">
  <input type="radio" name="radio" value="2" checked>
  <input type="radio" name="radio" value="3">
  <br>
  <input type="checkbox" id="checkbox1" name="checkbox1" value="1" checked>
  <input type="checkbox" id="checkbox1" name="checkbox2" value="2">
  <input type="checkbox" id="checkbox1" name="checkbox3" value="3">
  <br>
  <button id="update_form_button" drab-click="update_form">Get form values</button>
</form>

<br>
<pre id="out" style="white-space: pre-wrap;" @out=<%= @out %>><%= inspect @out %></pre>
<br>
<br>
<br><br>
<b id="text_to_set_onload"><%= @text %></b>
